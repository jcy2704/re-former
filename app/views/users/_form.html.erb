<%= form_for @user do |u| %>
  <% @user.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  <%= u.label :username, 'Username:' %><br />
  <%= u.text_field :username, placeholder: 'Username' %><br />
  <%= u.label :password, 'Password:' %><br />
  <%= u.password_field :password, placeholder: 'Password' %><br />
  <%= u.label :email, 'Email:' %><br />
  <%= u.email_field :email, placeholder: 'email@example.com' %><br />
  <%= u.submit %>
<% end %>